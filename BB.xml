<BeatBear>
	<charset>utf-8</charset>
	<data>
		
		<stock>
			<!-- stock codes meta data file -->
			<codeMetaFileURI>~/GitHub/data/stock/metaData/hsA.txt
			</codeMetaFileURI>

			<finStmts>
				<!-- stock financial statements home location -->
				<finStmtStoreURI>~/GitHub/data/stock/finStmts</finStmtStoreURI>

			</finStmts>

			<dailyTrade>
				<!-- stock daily trade data home location -->
				<dailyTradeURI>~/GitHub/data/stock/dailyTrade</dailyTradeURI>
			</dailyTrade>



			<dataSourceList>

				<currentSource>
					<name>163</name>
					<service>
						http://quotes.money.163.com/service/
					</service>
					<resourceList>
						<finStmts>
							<!-- three main financial statements -->
							<!-- 资产负债表 -->
							<balanceStmt>zcfzb_$sc$.html</balanceStmt>
							<!-- 利润表 -->
							<incomeStmt>lrb_$sc$.html</incomeStmt>
							<!-- 现金流量表 -->
							<cashFlowStmt>xjllb_$sc$.html</cashFlowStmt>

							<!-- 财务报表摘要 -->
							<summary>cwbbzy_$sc$.html</summary>

							<!-- 主要财务指标 -->
							<keyIndexList>
								<!-- 主要指标 -->
								<keyIndex>hzycwzb_$sc$.html?type=report</keyIndex>
								<!-- 盈利能力 -->
								<profit>zycwzb_$sc$.html?type=report&amp;part=ylnl</profit>
								<!-- 偿还能力 -->
								<payback>zycwzb_$sc$.html?type=report&amp;part=chnl</payback>
								<!-- 成长能力 -->
								<growth>zycwzb_$sc$.html?type=report&amp;part=cznl</growth>
								<!-- 营运能力 -->
								<operation>zycwzb_$sc$.html?type=report&amp;part=yynl</operation>
							</keyIndexList>

						</finStmts>
					</resourceList>
				</currentSource>
			</dataSourceList>


		</stock>

	</data>

</BeatBear>